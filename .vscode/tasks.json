// Файл tasks.json используется в VS Code для определения задач (tasks),
// таких как сборка проекта или очистка временных файлов.

// ========================================================================================
// КАК ЭТО РАБОТАЕТ:
//     При нажатии Ctrl+Shift+B запускается задача build:
//         Выполняется команда make -j9 для сборки проекта.
//         Если в проекте есть Makefile, он используется для определения шагов компиляции.
//     Для очистки проекта:
//         Запустите задачу через Terminal > Run Task > clean.
//         Выполнится команда make clean
// ========================================================================================
{
    "version": "2.0.0",
    "tasks": [
        {
            // Название задачи (отображается в интерфейсе):
            "label": "build",

            // Тип задачи: команда выполняется в терминале:
            "type": "shell",

            // Исполняемая команда (здесь — утилита make):
            "command": "make",

            // Аргументы для команды (параллельная сборка):
            "args": [
                "-j9"   // запустить сборку в 9 параллельных потоков
                        // (оптимизирует скорость для многоядерных процессоров),
            ],

            // Группа, к которой принадлежит задача:
            "group": {
                "kind": "build",    // тип группы,
                "isDefault": true   // задача выполняется по умолчанию при выборе build,
            },

            // Инструменты для автоматического парсинга ошибок компиляции (например, для 
            // подсветки ошибок в коде). При аргументе "$gcc" VS Code будет 
            // анализировать вывод компилятора:
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make",

            // Аргумент для make: удалить сгенерированные файлы:
            "args": [
                "clean"
            ],
            "problemMatcher": ["$gcc"]
        }
    ]
}