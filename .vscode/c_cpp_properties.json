// Файл c_cpp_properties.json используется в VS Code для настройки 
// расширения C/C++ (IntelliSense, анализ кода, подсветка ошибок).

{
    "configurations": [
        {
            // Произвольное название:
            "name": "STM32",

            "compilerPath": "/usr/bin/arm-none-eabi-gcc",

            // Список путей к заголовочным файлам (.h), которые 
            // нужны для работы IntelliSense:
            "includePath": [

                // Двойная звездочка ** означает: «Рекурсивно 
                // включить все файлы и поддиректории внутри ${workspaceRoot}».
                "${workspaceRoot}/**"

            ],

            // Задаем макросы препроцессора для корректной интерпретации кода:
            "defines": [
                "STM32F407xE",      // определяем модель микроконтроллера,
                "USE_HAL_DRIVER"    // активируем использование HAL-библиотеки,
            ],

            // Версии стандартов языка C/C++, которые имитирует IntelliSense:
            "cStandard": "c11",
            "cppStandard": "c++17",

            // Режим анализа кода:
            "intelliSenseMode": "gcc-arm"
        }
    ],
    "version": 4
}